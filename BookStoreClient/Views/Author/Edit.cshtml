@model BusinessObject.DTO.AuthorDTO;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit";
    BusinessObject.Models.Author author = ViewData["Author"] as BusinessObject.Models.Author;
}
<h1>Create</h1>
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">@ViewData["SuccessMessage"]</div>
}
<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label mb-1">Email</label>
                <input asp-for="Email" class="form-control" value=@author.Email/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FirstName" class="control-label mb-1">First Name</label>
                <input asp-for="FirstName" class="form-control" value=@author.FirstName/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="LastName" class="control-label mb-1">Last Name</label>
                <input asp-for="LastName" class="form-control" value=@author.LastName/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Phone" class="control-label mb-1">Phone</label>
                <input asp-for="Phone" class="form-control" value=@author.Phone />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Address" class="control-label mb-1">Address</label>
                <input asp-for="Address" class="form-control" value=@author.Address />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="City" class="control-label mb-1">City</label>
                <input asp-for="City" class="form-control" value=@author.City />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="State" class="control-label mb-1">State</label>
                <input asp-for="State" class="form-control" value=@author.State />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Zip" class="control-label mb-1">Zip</label>
                <input asp-for="Zip" class="form-control" value=@author.Zip />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}