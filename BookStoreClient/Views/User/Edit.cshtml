@model BusinessObject.DTO.User.ProfileDTO;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit";
    BusinessObject.Models.User user = ViewData["User"] as BusinessObject.Models.User;
}
<h1>Edit</h1>
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">@ViewData["SuccessMessage"]</div>
}
<h4>Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="FirstName" class="control-label mb-1">FirstName</label>
                <input asp-for="FirstName" class="form-control" value=@user.FirstName />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="MiddleName" class="control-label mb-1">Middle Name</label>
                <input asp-for="MiddleName" class="form-control" value=@user.MiddleName />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="LastName" class="control-label mb-1">Last Name</label>
                <input asp-for="LastName" class="form-control" value=@user.LastName />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label mb-1">Email</label>
                <input asp-for="Email" class="form-control" value=@user.Email />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label mb-1">Password</label>
                <input asp-for="Password" class="form-control" value=@user.Password />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Source" class="control-label mb-1">Source</label>
                <input asp-for="Source" class="form-control" value=@user.Source />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}